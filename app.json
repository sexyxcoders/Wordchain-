{
  "name": "TNC-WordChain Bot",
  "description": "ðŸ¤– Telethon-based WordChain auto-player with Pyrogram Controller by TechNodeCoders.",
  "repository": "https://github.com/sexyxcoders/Wordchain-",
  "logo": "https://telegra.ph/file/9f25a87c46fa2e3e9e3b2.jpg",
  "keywords": ["telegram", "pyrogram", "telethon", "wordchain", "bot"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Your Telegram API ID from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH from https://my.telegram.org",
      "required": true
    },
    "MONGO_URI": {
      "description": "Your MongoDB URI (MongoDB Atlas recommended)",
      "required": true
    },
    "DB_NAME": {
      "description": "Name of your MongoDB database",
      "value": "TNCWordchainDB",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of the Bot Owner",
      "required": true
    },
    "LOG_GROUP_ID": {
      "description": "Telegram group/channel ID where connection logs will be sent",
      "required": true
    },
    "SUPPORT_CHANNEL": {
      "description": "Your Support Channel link",
      "value": "https://t.me/TechNodeCoders"
    },
    "SUPPORT_CHAT": {
      "description": "Your Support Chat link",
      "value": "https://t.me/TNCmeetup"
    },
    "START_IMAGE": {
      "description": "Start command banner image URL or file path",
      "value": "assets/start_banner.jpg"
    },
    "MUST_JOIN_IMAGE": {
      "description": "Image shown for Must Join prompt",
      "value": "https://files.catbox.moe/sdlf66.jpg"
    },
    "WORDCHAIN_GROUP": {
      "description": "Group ID where WordChain game runs (if needed)",
      "value": "-1003111446920"
    }
  },
  "buildpacks": [
    { "url": "heroku/python" }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Standard-1X"
    }
  },
  "addons": [],
  "scripts": {
    "postdeploy": "echo 'TNC-WordChain deployed successfully!'"
  },
  "success_url": "https://t.me/TechNodeCoders"
}